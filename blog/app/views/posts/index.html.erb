<h1>Posts</h1>

<% if current_admin %>
	<div class="administer" style="text-align:right">
		<%= link_to '[New]', new_post_path %>
	</div>
<% end %>

<hr/>

<table>

<% @posts.each do |post| %>
  <tr>
	<td><%= User.find(post.user).nick %>: </td>
    <td class="post_title"><%= link_to post.title, post %></td>
	<td class="post_info">
		( <%= time_ago_in_words(post.created_at) %> ago ;
		<%= post.comments.count %> comments )
	</td>
	<% if current_admin %>
		<td class="administer"><%= link_to '[edit]', edit_post_path(post) %></td>
		<td class="administer"><%= link_to '[destroy]', post, confirm: 'Are you sure?', method: :delete %></td>
	<% end %>
  </tr>
<% end %>
</table>

<br />



