<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag "blue" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<table id = "top">
		<tr>
			<td id="facebook">
				 <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script>
				  <fb:like href="http://www.facebook.com/kjuiksblog" layout="button_count" show_faces="false" width="450"></fb:like>
			<td>
			<td id="nav">
				<% if current_user %>
					<%= link_to "Edit Profile", edit_user_path(current_user.id)%> |
					<%= link_to "Logout", :logout%>
				<% else %>
					<%= link_to "Register", new_user_path%> | 
					<%= link_to "Login", :login %>
				<% end %>
			</td>
		</tr>
	</table>
	
	
	<hr/>
	
	<div id="menu">
		<%= link_to "Posts", :posts%> |
		<%= link_to "Users", :users%>
    </div>
	
	<hr/>
	
	<p id="notice"><%= notice %></p>

	<div id="main">
		<%= yield %>
	</div>

</body>
</html>
